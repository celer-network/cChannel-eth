{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "assert": true,
    "contract": true,
    "before": true,
    "it": true,
    "artifacts": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
